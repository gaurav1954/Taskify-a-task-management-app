<% layout('layouts/nandr') %>
    <div class="log_form">
        <form class="needs-validation" action="/login" method="POST" novalidate>
            <h2 class="text-center">Login</h2>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" id="username" name="username" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" id="password" name="password" required>
                <% if (messages.error) { %>
                    <div class="form-label err-label">
                        <%= messages.error %>
                    </div>
                    <% } %>
            </div>
            <div class="d-flex justify-content-center mb-3 align-items-stretch">
                <button type="submit" class="btn btn-dark wide-button">LOG IN</button>
            </div>
        </form>
        <form action="/register" class="d-flex flex-column justify-content-center">
            <label for="sign" class="form-label">Not a registered member?</label>
            <button type="submit" class="btn btn-light wide-button" id="sign">SIGN IN</button>
        </form>
    </div>